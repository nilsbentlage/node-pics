{
  "name": "node-pics",
  "version": "1.0.0",
  "description": "Pure Image Compression|Conversion|Caching Server",
  "main": "src/index.js",
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/index.js",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/ImageRequest.js\"",
    "dev:ImageRequest": "concurrently \"npx tsc --watch\" \"nodemon -q dist/ImageRequest.js\"",
    "clear": "node dist/clearCache.js"
  },
  "author": "Nils Bentlage",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "sharp": "^0.31.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.3",
    "@types/sharp": "^0.31.1",
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.21",
    "typescript": "^5.0.2"
  }
}
